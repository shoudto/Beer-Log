<h1>Edit your new Blog</h1>

<form action="/blogs/<%= @blog.id %>" method="post">
  
  <input type="hidden" id="hidden" name="_method" value="PATCH"> 
  
  <label>Beer Name:</label>
  <input type="text" name="title" value="<%= @blog.title %>"><br><br>

  <label>Beer Type:</label>
  <input type="text" name="name" value="<%= @blog.name %>"><br><br>

  <label>Brewery:</label>
  <input type="text" name="brewery" value="<%= @blog.brewery %>"><br><br>
  
  <label>Beer Log:</label>
  <textarea name="body"><%= @blog.body %></textarea><br>
  
 	<input type="submit">
</form>