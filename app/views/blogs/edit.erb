<h1>Edit your new Blog</h1>

<form action="/blogs/<%= @blog.id %>" method="post">
  
  <input type="hidden" id="hidden" name="_method" value="PATCH"> 
  
  <label>Title:</label>
  <input type="text" name="title" value="<%= @blog.title %>"><br>
  
  <label>Body:</label>
  <textarea name="body"><%= @blog.body %></textarea><br>
  
 	<input type="submit">
</form>