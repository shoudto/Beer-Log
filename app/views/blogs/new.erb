<h1 style="text-align:center;">Create a Beer Log!</h1>

<form action="/blogs" method="post">

    <label>Beer Name:</label>
    <input type="text" name="title" value="<%= @blog ? @blog.title : ""%>"><br><br>

    <label>Brewery Name:</label>
    <input type="text" name="brewery" value="<%= @blog ? @blog.brewery : ""%>"><br><br>

    <label>Beer Type:</label>
    <input type="text" name="name" value="<%= @blog ? @blog.name : ""%>"><br><br>

    <label>Description:</label>
    <textarea name="body"><%= @blog ? @blog.body : ""%></textarea><br><br>

    <input type="submit">
</form>
